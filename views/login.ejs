<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="css">
    <link rel="stylesheet" href="style">
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="metroCss">
    <link rel="stylesheet" href="metroIcon">
    <link rel="stylesheet" href="bg-login">
    <script scripts="metroJs"></script>
    <style>
        body {
            background-image: url('/bg-login');
            background-repeat: no-repeat;
            background-size: cover;
            width: auto;
            padding-top: 200px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
        <!-- <h1><span class="fa fa-sign-in"></span> Login</h1> -->
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class='alert alert-danger'><%= message %></div>
        <% } %>
    </div>
    <!-- Form Login-->
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row title">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link"><span class="fa fa-sign-in"></span> Sign-in</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link"><span class="glyphicon glyphicon-user"></span> Sign-up</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!-- form login -->
                            <form id="login-form" action="/login" method="post" role="form" style="display: block;">
                                <div class="input-control modern text iconic" style="margin-left: 27%;">
                                    <input type="email" name="email" id="email"
                                           placeholder="E-Mail Address" required />
                                        <span class="label">You Email Address</span>
                                        <span class="informer">Please Enter You Email Address</span>
                                </div>
                                <div class="input-control modern text iconic"  style="margin-left: 27%;">
                                    <input type="password" name="password" id="password"
                                            placeholder="Password" required />
                                        <span class="label">You Password</span>
                                        <span class="informer">Please Enter You Password</span>
                                </div>
                                <br><br>
                                <div class="text-center">
                                    <input type="checkbox" class="" name="remember" id="remember">
                                    <label for="remember"> Remember Me</label>
                                </div>
                                <br>
                                <div class="">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center">
                                                <input type="submit" name="login-submit" id="login-submit"
                                                       class="w3-btn w3-amber w3-hover-orange loginBtn" value="Sign-in">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center">
                                                <a href="
                                                    " tabindex="5" class="forgot-password">Forgot Password?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- end form login -->

                            <!-- form signup -->
                            <form id="register-form" action="/signup" method="post" role="form" style="display: none;">
                                <div class="input-control modern text iconic"  style="margin-left: 27%;">
                                    <input type="email" name="email2" id="username" placeholder="E-Mail Address" required>
                                        <span class="label">You Email Address</span>
                                        <span class="informer">Please Enter You Email Address</span>
                                </div>
                                <div class="input-control modern text iconic"  style="margin-left: 27%;">
                                    <input type="password" name="password" id="re_password" placeholder="Password" required>
                                        <span class="label">You Password</span>
                                        <span class="informer">Please Enter You Password</span>
                                </div>
                                <div class="input-control modern text iconic"  style="margin-left: 27%;">
                                    <span id='message'></span>
                                    <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm Password" required>
                                        <span class="label">You Confirm Password</span>
                                        <span class="informer">Comfirm Password</span>
                                </div>
                                <br><br>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center">
                                                <input type="submit" name="register-submit" id="register-submit" class="w3-btn w3-amber w3-hover-orange"
                                                       value="Sign-up">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- end form signup -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Form Login -->
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
        <!-- <p>Need an account? <a href="/signup">Signup</a></p> -->
    </div>
</div>  <!--  End container -->
</body>
</html>

<script src="/js"></script>
<script type="text/javascript">

    <!-- link signin and singup -->
    $(function () {
        $('#login-form-link').click(function (e) {
            $("#login-form").delay(100).fadeIn(100);
            $("#register-form").fadeOut(100);
            $('#register-form-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });
        $('#register-form-link').click(function (e) {
            $("#register-form").delay(100).fadeIn(100);
            $("#login-form").fadeOut(100);
            $('#login-form-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });
    });
        <!--  confirm password -->
        $('#re_password, #confirm_password').on('keyup', function () {
        if ($('#re_password').val() == $('#confirm_password').val()) {
            $('#message').html('Matching').css('color', 'green');
        } else 
            $('#message').html('Not Matching').css('color', 'red');
        });
</script>